{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "./venv/bin/python3",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "ðŸ¤– Bot: Start Telegram Bot",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/bot.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "./venv/bin/python3",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "ðŸ¤– Bot: Start with Module",
      "type": "debugpy",
      "request": "launch",
      "module": "src.bot",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "./venv/bin/python3",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "ðŸ”§ Manager: Status",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manager.py",
      "console": "integratedTerminal",
      "args": ["status"],
      "cwd": "${workspaceFolder}",
      "python": "./venv/bin/python3",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "ðŸ”§ Manager: Start Bot",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manager.py",
      "console": "integratedTerminal",
      "args": ["start"],
      "cwd": "${workspaceFolder}",
      "python": "./venv/bin/python3",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "ðŸ”§ Manager: Setup",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manager.py",
      "console": "integratedTerminal",
      "args": ["setup"],
      "cwd": "${workspaceFolder}",
      "python": "./venv/bin/python3",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "ðŸ“‹ Scripts: Health Check",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/health.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "python": "./venv/bin/python3",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
